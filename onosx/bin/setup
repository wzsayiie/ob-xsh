#!/bin/zsh

cd `dirname $0`

srcfile=$1
outfile=$2

# if the executable file exists and is newer than the source,
# then there is no need to compile.
if [ -f $outfile ]; then
    newer=`find $outfile -newer $srcfile`
    if [ "$newer" = "$outfile" ]; then
        exit
    fi
fi

clang -framework cocoa $srcfile -o $outfile
